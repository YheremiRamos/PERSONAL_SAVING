@model IEnumerable<Proyecto.Presentacion.Models.TransaccionModel>

@{
    ViewData["Title"] = "listadoTransacciones";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
    double saldo = 0.0;
}


<div class="container-fluid  col-xl-10">
    @foreach (var item in Model)
    {
        saldo = item.saldo_actual;
    }
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h1 mb-3 text-gray-800" style="text-align:center">CONSULTAR MIS TRANSACCIONES</h1>
    </div>
    <hr />
    <div class="row">
        <!--  Activos actuales -->
        <div class="col-xl-5 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Activos actuales
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">S/ @saldo</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Transacciones -->
        <div class="col-xl-5 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-4">
                            <a href="@Url.Action("listadoIngresos", "Ingreso")" class="btn btn-primary btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-arrow-right"></i>
                                </span>
                                <span class="text">Mis ingresos</span>
                            </a>
                        </div>
                        <div class="my-2"></div>
                        <div class="col mr-4">
                            <a href="@Url.Action("listadoEgresos", "Egreso")" class="btn btn-primary btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-arrow-right"></i>
                                </span>
                                <span class="text">Mis egresos </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.fecha)</th>
                        <th>@Html.DisplayNameFor(model => model.monto)</th>
                        <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.fecha)</th>
                        <th>@Html.DisplayNameFor(model => model.monto)</th>
                        <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model) {
                        saldo = item.saldo_actual;
                        <tr>
                            <td>@item.fecha.ToShortDateString()</td>
                            <td>@item.monto.ToString("S/ " + "0.00")</td>
                            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
